<div class="card mb-3">
  <h2 class="card-header h4">
    Item #<%= item.id %>
  </h2>

  <div class="card-body">
    <dl class="mb-1">
      <dt>Title</dt>
      <!-- Display title start -->
      <dd><%= item.title %></dd>
      <!-- Display title end -->

      <dt>Price</dt>
      <!-- Display price start -->
      <dd><%= item.price %></dd>
      <!-- Display price end -->

      <dt>Category</dt>
      <!-- Display category_id start -->
      <dd>
        <% if @item.category.present? %>
          <%= link_to item.category, item.category %>
        <% end %>
      </dd>
      <!-- Display category_id end -->

      <dt>Photo</dt>
      <!-- Display photo start -->
      <dd>
        <%= cl_image_tag @item.photo, class: "img-fluid" %>
      </dd>
      <!-- Display photo end -->

      <dt>User</dt>
      <!-- Display user_id start -->
      <dd>
        <% if @item.user.present? %>
          <%= link_to item.user, item.user %>
        <% end %>
      </dd>
      <!-- Display user_id end -->

      <dt>Comment</dt>
      <!-- Display comment_id start -->
      <dd><%= item.comment_id %></dd>
      <!-- Display comment_id end -->

    </dl>

    <div class="row">
      <div class="col">
        <%= link_to_show_or_back item, '<i class="fas fa-search-plus"></i>'.html_safe, '<i class="fas fa-chevron-left"></i>'.html_safe, class: "btn btn-block btn-outline-secondary" %>
      </div>

      <!-- Edit link item start -->
      <div class="col">
        <% if current_user == @item.user %>
          <%= link_to edit_item_url(item), class: "btn btn-block btn-sm btn-outline-secondary" do %>
            <i class="fas fa-edit"></i>
          <% end %>
        <% end %>
      </div>
      <!-- Edit link item end -->

      <!-- Delete link item start -->
      <div class="col">
        <% if current_user == @item.user %>
          <%= link_to item, method: :delete, data: { confirm: "Do you really want to delete this item?" }, class: "btn btn-block btn-outline-secondary" do %>
            <i class="fas fa-trash-alt"></i>
          <% end %>
        <% end %>
      </div>
      <!-- Delete link item end -->
    </div>
  </div>

  <div class="card-footer text-muted">
    Last updated <%= time_ago_in_words(item.updated_at) %> ago
  </div>
</div>
